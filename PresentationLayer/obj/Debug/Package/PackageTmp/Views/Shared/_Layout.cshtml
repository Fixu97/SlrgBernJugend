@using Shared
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>

        <!--Bootstrap mobile friendly-->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>SLRG Bern - @ViewBag.Title</title>
        <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </head>
    <body style="background-color:rgb(20,68,92)">
        <div class="container-fluid" id="wrapper">
            <header class="container-fluid">
                <div id="logoContainer">
                    <a href="/">
                        <img src="~/Images/SlrgBernLogoTransparent.gif" alt="SLRG Bern Logo" /></a>
                    <h1>Analysis Database</h1>
                </div>
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                    @if (SessionFacade.IsLoggedOn)
                    {
                        @Scripts.Render("~/bundles/global")
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse" id="navbar">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                @if (SessionFacade.User.Admin)
                                {
                                    <li>@Html.ActionLink("People", "Index", "People")</li>
                                    <li>@Html.ActionLink("Disciplines", "Index", "Disciplines")</li>
                                    <li>@Html.ActionLink("Relays", "Index", "Relays")</li>
                                    <li>@Html.ActionLink("Times", "Index", "Times")</li>
                                    <li>@Html.ActionLink("Permissions", "Index", "Permissions")</li>
                                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                                    <li>@Html.ActionLink("Import", "Index", "Import")</li>
                                }
                                else
                                {
                                    //Insert normal user pages
                                }
                            </ul>
                            @if (SessionFacade.IsLoggedOn)
                            {
                                <ul class="nav navbar-nav navbar-right">
                                    <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                                </ul>
                            }
                        </div>
                    }
                    </div>
                </nav>
            </header>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix" id="content">
                @RenderBody()
            </section>
            <footer>
                Created by Felix Neidhart
            </footer>
        </div>
    @RenderSection("scripts", required: false)

    </body>
</html>
