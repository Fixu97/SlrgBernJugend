<tr>
    <th>
        Prename
    </th>
    <td>
        @Html.TextBox("Prename", null, new {required="true"})
    </td>
</tr>
<tr>
    <th>
        Lastname
    </th>
    <td>
        @Html.TextBox("Lastname", null, new { required = "true" })
    </td>
</tr>
<tr>
    <th>
        Male
    </th>
    <td>
        @Html.CheckBox("Male")
    </td>
</tr>
<tr>
    <th>
        Birthday
    </th>
    <td>
        @Html.TextBox("Birthday", null, new
   {
       pattern = "^(0[1-9]|[1-2][0-9]|3[0-1])\\.(0[1-9]|1[0-2])\\.(1[9]|2\\d)\\d{2}$",
       oninvalid = "setCustomValidity('Invalid date or wrong format! Expected \"dd.MM.yyyy\" or empty')"
   })
    </td>
</tr>
<tr>
    <th>
        PhoneNr
    </th>
    <td>
        @Html.TextBox("PhoneNr", null, new {
           pattern = "^(\\+41 |0)\\d\\d \\d\\d\\d \\d\\d \\d\\d$",
           oninvalid = "setCustomValidity('Phone Number has to be like \"+41 xx xxx xx xx\" or empty')"})
    </td>
</tr>
<tr>
    <th>
        Email
    </th>
    <td>
        @Html.TextBox("Email", null, new
   {
       pattern = "^[\\w]+(\\.\\w+)*@[a-zA-Z]+(\\.\\w+)*\\.[a-zA-Z]{2,}$",
       oninvalid = "setCustomValidity('Please enter a valid email adress')"
   })
    </td>
</tr>
<tr>
    <th>
        Active
    </th>
    <td>
        @Html.CheckBox("Active", true)
    </td>
</tr>