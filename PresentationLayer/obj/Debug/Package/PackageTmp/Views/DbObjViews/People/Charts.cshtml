

<div id="chart-area">
    <select id="disciplineSelect"></select>
    <div id="tab-content"></div>
</div>

<script>

    $(document).ready(function() {

        GetAllEntries("Disciplines", function (retVal) {

            var chartArea = $("#disciplineSelect");
            $(retVal).each(function(i, element) {
                chartArea.append("<option value='" + element.Pk + "'>" + element.DisplayName + "</option>");
            });

            var disciplineId = $("#disciplineSelect").val();
            CreateChartForPersonForDiscipline($("#tab-content"),@Model.Pk, disciplineId);
        });

    });

    $("#disciplineSelect").change(function() {

        var disciplineId = $(this).val();
        CreateChartForPersonForDiscipline($("#tab-content"),@Model.Pk, disciplineId);

    });

</script>
@Scripts.Render("~/bundles/chartjs")