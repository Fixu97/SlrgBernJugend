@using Shared.Models.db
@model PresentationLayer.Models.InsertModel
    @{
        var insertedObject = Model.InsertedObject as TimeDTO;
    }
<tr>
    <th>
        Person
    </th>
    <td id="td-FK_P">
    </td>
</tr>
<tr>
    <th>
        Discipline
    </th>
    <td id ="td-FK_D">
    </td>
</tr>
<tr>
    <th>
        Date
    </th>
    <td>
        @Html.TextBox("Date", insertedObject != null ? insertedObject.Date.ToString("dd.MM.yyyy") : "")
    </td>
</tr>
<tr>
    <th>
        Seconds
    </th>
    <td>
        @Html.TextBox("Seconds")
    </td>
</tr>
<script>
    $(document).ready(function() {
        CreatePeopleDropdown(@Html.Raw(insertedObject != null ? insertedObject.FK_P : 0), $("#td-FK_P"));
        CreateDisciplinesDropdown(@Html.Raw(insertedObject != null ? insertedObject.FK_D : 0), $("#td-FK_D"));
    });
</script>