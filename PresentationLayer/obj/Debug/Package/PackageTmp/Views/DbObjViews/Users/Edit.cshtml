@model Shared.Models.db.UserDTO
<tr>
    <th>
        Username
    </th>
    <td>
        @Html.TextBoxFor(model => Model.Username)
    </td>
</tr>
<tr>
    <th>
        Password
    </th>
    <td>
        @Html.PasswordFor(model => Model.Password)
    </td>
</tr>
<tr>
    <th>
        Confirm password
    </th>
    <td>
        @Html.Password("ConfPassword")
    </td>
</tr>
<tr>
    <th>
        Email
    </th>
    <td>
        @Html.TextBoxFor(model => Model.Email)
    </td>
</tr>
<tr>
    <th>
        Admin
    </th>
    <td>
        @Html.CheckBoxFor(model => Model.Admin)
    </td>
</tr>