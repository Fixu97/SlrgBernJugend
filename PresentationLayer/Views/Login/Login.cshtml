@using PresentationLayer.Models
@model LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: table; text-align:center; margin:auto;">
    <h2>Login</h2>

    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <table style="margin:auto;">
            <tr>
                <th>Username: </th>
            </tr>
            <tr>
                <td><input type="text" name="Username" placeholder="Username" size="32" required="true" autofocus="true" /></td>
            </tr>
            <tr>
                <td><br /></td>
            </tr>
            <tr>
                <th>Password: </th>
            </tr>
            <tr>
                <td><input type="password" name="Password" placeholder="Password" size="32" required="true" /></td>
            </tr>
            <tr>
                <td><input type="submit" name="Submit" value="login" /></td>
            </tr>
        </table>
    }
    @{
        if (Model.CurrentMode == LoginModel.PageMode.Erroneous)
        {
            <br />
            <img style="max-width:100%;" src="~/Images/YouShallNotPass.jpg" alt="*That's a funny pictre of a wizard" />
        }
    }
</div>