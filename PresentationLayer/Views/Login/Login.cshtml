@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <table>
        <tr>
            <th>Username: </th>
            <td><input type="text" name="Username" placeholder="Username" size="32" required="true" autofocus="true"/></td>
        </tr>
        <tr>
            <th>Password: </th>
            <td><input type="password" name="Password" placeholder="Password" size="32" required="true" /></td>
        </tr>
        <tr>
            <th></th>
            <td><input type="submit" name="Submit" value="login" /></td>
        </tr>
    </table>
}